<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNumberOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="right|bottom"
                android:textSize="35sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvItemScheduleAMPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uni."
                android:gravity="right|top"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/tvNameClientOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Cliente"
                android:textSize="20sp"
                android:textColor="@color/colorTextPrimaryDark"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:id="@+id/tvItemDetailOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalle de Pedido"
                android:textSize="15sp"
                android:textColor="@color/colorTextPrimaryDark"
                android:ellipsize="end"
                android:lines="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTagOrder"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Tag"
                    android:layout_marginTop="2dp"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/shape_tag"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/imbDeliveryOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="160dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="14dp"
                    android:background="@drawable/ic_sucess"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="5dp"/>

</LinearLayout>